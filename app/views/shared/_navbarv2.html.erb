<div class="navbar-wagon navbar-wagon-fixed" >
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo1.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
       <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
           <li>
            <%= link_to root_path do %>
            <i class="fa fa-globe"></i>  <%= t(".profile", default: "Mundo") %>
            <% end %>
          </li>
            <li>
            <%= link_to rider_path(current_user.rider) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <%end%>
          </li>
           <li>
            <%= link_to albums_path do %>
            <i class="fa fa-image"></i>  <%= t(".profile", default: "Media") %>
            <% end %>
          </li>
          <li>
            <a href="https://www.youtube.com/user/1331panchito">
              <i class="fa fa-youtube"></i> Videos
            </a>
          </li>
            <li>
            <a href="https://www.instagram.com/ptybrothers/">
              <i class="fa fa-instagram"></i> Instragram
            </a>
          </li>
            <li>
            <%= link_to pages_about_path do %>
            <i class="fa fa-thumbs-up"></i>  Contact us
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
     </div>
   </div>
   <% else %>

   <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item  btn btn-bro" %>
   <% end %>

 </div>
</div>
